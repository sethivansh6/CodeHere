<h1 class="text-center">Contact Us</h1>

{{#each errorMessages}}
<div class="alert alert-danger">
    {{this.msg}} for <strong>{{param}}</strong>
</div>
{{/each}}
<form class="col-md-6 col-md-offset-3" method="POST">
    
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Full Name" name="name" value={{name}}>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="name@example.com" name="email" value={{email}}>
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Message</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="message">{{message}}</textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-primary btn-sm">Submit</button>

</form>